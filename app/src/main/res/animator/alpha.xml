<?xml version="1.0" encoding="utf-8"?>
<!-- 淡入淡出动画
    propertyName：属性名
    valueFrom：属性开始值
    valueTo: 属性结束值
    valueType：属性值的内容
    duration：动画耗时
-->
<objectAnimator
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:propertyName="alpha"
    android:valueFrom="1.0"
    android:valueTo="0.3"
    android:valueType="floatType"
    android:duration="2000"/>
